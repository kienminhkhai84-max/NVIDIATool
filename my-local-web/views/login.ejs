<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <div class="card login-card">
        <div class="card-header">
            <!-- Bạn có thể thay bằng logo của NVIDIA -->
            <svg class="logo" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100" fill="#76b900"><path d="M50,10A40,40,0,1,0,90,50,40,40,0,0,0,50,10Zm0,72A32,32,0,1,1,82,50,32,32,0,0,1,50,82Z"/><path d="M50,26a4,4,0,0,0-4,4V50a4,4,0,0,0,8,0V30A4,4,0,0,0,50,26Z"/></svg>
            <h1>Chào mừng trở lại</h1>
        </div>

        <% if (error) { %>
            <div class="error-message"><%= error %></div>
        <% } %>

        <form id="loginForm" action="/do-login" method="POST">
            <div class="form-group">
                <label for="email">Email NVIDIA</label>
                <span class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M.05 3.555A2 2 0 0 1 2 2h12a2 2 0 0 1 1.95 1.555L8 8.414.05 3.555ZM0 4.697v7.104l5.803-3.558L0 4.697ZM6.761 8.83l-6.57 4.027A2 2 0 0 0 2 14h12a2 2 0 0 0 1.808-1.144l-6.57-4.027L8 9.586l-1.239-.757Zm3.436-.586L16 11.801V4.697l-5.803 3.546Z"/>
                    </svg>
                </span>
                <input type="email" id="email" name="email" required placeholder="vidu@email.com">
            </div>
            <div class="form-group">
                <label for="password">Mật khẩu</label>
                <span class="icon">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 16 16">
                        <path d="M8 1a2 2 0 0 1 2 2v4H6V3a2 2 0 0 1 2-2zm3 6V3a3 3 0 0 0-6 0v4a2 2 0 0 0-2 2v5a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V9a2 2 0 0 0-2-2z"/>
                    </svg>
                </span>
                <input type="password" id="password" name="password" required placeholder="••••••••">
            </div>
            <button type="submit" class="btn" id="loginButton">
                <span class="spinner"></span>
                <span class="btn-text">Đăng nhập</span>
            </button>
        </form>
    </div>

    <script>
        const loginForm = document.getElementById('loginForm');
        const loginButton = document.getElementById('loginButton');
        const spinner = loginButton.querySelector('.spinner');
        const btnText = loginButton.querySelector('.btn-text');

        loginForm.addEventListener('submit', (e) => {
            // Vô hiệu hóa nút và hiển thị trạng thái loading
            loginButton.disabled = true;
            loginButton.classList.add('loading');
            btnText.textContent = 'Đang xử lý...';
        });
    </script>
</body>
</html>